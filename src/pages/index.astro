<script is:inline>
	document.addEventListener("DOMContentLoaded", () => {
		document.querySelectorAll(".dropdown-toggle").forEach((btn) => {
			btn.addEventListener("click", () => {
				btn.parentElement.classList.toggle("open");
			});
		});
	});
</script>
<style>
	@media (min-width: 390px) {
		.wrapper {
			display: flex;
			flex-wrap: nowrap;
			align-items: flex-end;
			justify-content: space-between;
			margin: 10%;

			padding: 2%;
			width: 100%;
			height: 100px;
			gap: 7rem;
			scroll-snap-align: start;
			transition: transform 0.3s ease;
		}
		.header {
			overflow-x: auto;
			-webkit-overflow-scrolling: touch;
			scroll-padding: 1rem;
			margin: 7%;
		}

		.name {
			display: flex;
			justify-content: center;
			align-items: flex-end;
			position: relative;
			height: 3vh;
		}
		.name h1 {
			font-size: 3.5vh;
			font-weight: 700;
			color: #ca6c38;
			margin: 0;
			margin-bottom: -2vh;
		}
		.frame {
			background-color: #faf2e2;
			height: auto;
			width: 90%;
			margin: 0;
			justify-self: center;
			overflow: hidden;
		}
		.frame div {
			margin-right: 3vh;
			margin-left: 3vh;
			font-weight: 250;
			justify-self: center;
			align-self: center;
		}
		.portræt {
			display: flex;
			justify-content: center;
			align-items: center;
			margin: 2rem auto;
			width: auto;
		}
		.portræt img {
			max-width: 300px;
			width: 100%;
			height: auto;
			margin: 0;
		}
		div h3 {
			border-top-style: solid;
			border-color: #ca6c38;
			padding: 1rem;
			padding-right: 2vh;
			padding-left: 2vh;
		}
		div p {
			border-bottom-style: solid;
			border-color: #ca6c38;
			padding-bottom: 1rem;
			padding-right: 2vh;
			padding-left: 2vh;
		}

		.Portfolie {
			display: none;
		}

		.Portfolie_mobile {
			margin-bottom: 2rem;
			display: flex;
			flex-direction: column;
			align-items: center;
		}

		/* Dropdown container */
		.Portfolie_mobile h1 {
			font-size: 6vh;
			font-weight: 700;
			justify-self: center;
			color: #ca6c38;
			margin: 0;
			margin-top: 3vh;
			margin-bottom: 1vh;
		}
		.dropdown {
			width: 100%;
			margin-top: 1rem;
			overflow: hidden;
			align-items: center;
			justify-items: center;
		}

		/* Knap med overskrift og pil */
		.dropdown-toggle {
			width: 300px;
			padding: 0rem;
			background: none;
			border: none;
			font-size: 1.2rem;
			font-weight: bold;
			text-align: left;
			cursor: pointer;
			position: relative;
		}

		.dropdown-toggle .arrow {
			position: absolute;
			top: 40%;
			right: 1rem;
			transition: transform 0.3s ease;
		}

		.dropdown.open .dropdown-toggle .arrow {
			transform: rotate(180deg);
		}

		/* Indhold (skjult som standard) */
		.dropdown-content {
			max-height: 0;
			overflow: hidden;
			transition: max-height 0.4s ease;

			gap: 2rem;

			display: flex;
			flex-direction: column;
			align-items: center;
		}

		.dropdown.open .dropdown-content {
			max-height: 3000px;
			padding: 1rem;
		}
	}
	@media (min-width: 1024px) {
		.Portfolie_mobile {
			display: none;
		}

		.header,
		.wrapper {
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-self: center;
			justify-content: space-between;
			min-height: 20px;
			width: 100%;
			margin-top: 1rem;
			margin-bottom: 2rem;
		}
		.name {
			display: flex;
			justify-content: center;
			align-items: flex-end;
			position: relative;
			height: 3vh;
		}

		.name h1 {
			font-size: 6vh;
			font-weight: 700;
			color: #ca6c38;
			margin: 0;
			margin-bottom: -4vh;
		}
		.frame {
			background-color: #faf2e2;
			height: auto;
			width: 90%;
			align-items: center;
			justify-self: center;
			margin: 0 auto;
		}
		.Ansøgning {
			display: grid;
			grid-template-columns: 2fr 2fr;
			grid-template-rows: auto;
		}

		.frame div {
			padding-right: 5vh;
			padding-left: 5vh;
			font-weight: 250;
		}
		div h3 {
			border-top-style: solid;
			border-color: #ca6c38;
			padding: 1rem;
		}
		div p {
			border-bottom-style: solid;
			border-color: #ca6c38;
			padding-bottom: 1rem;
		}
		.portræt {
			padding: 5vh;
			grid-column: 2/3;
			grid-row: 1/3;
			justify-self: center;
		}
		.OmMig {
			padding: 5vh;
			grid-column: 1/2;
			grid-row: 1/2;
			height: auto;
		}
		.Erfaring {
			grid-column: 1/2;
			grid-row: 2/3;
		}
		.Mål {
			grid-column: 2/3;
			grid-row: 3/4;
		}
		.Tilgang {
			grid-column: 1/2;
			grid-row: 3/4;
		}
		.Portfolie {
			margin: 0 auto; /* Centrerer containeren */
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		.Portfolie h1 {
			font-size: 6vh;
			font-weight: 700;
			justify-self: center;
			color: #ca6c38;
			margin: 0;
			margin-top: 3vh;
			margin-bottom: 1vh;
		}
		.Portfolie h3 {
			align-self: flex-start;
			margin: 2rem;
			border-top: none;
		}
		.PortCards {
			display: flex;
			flex-direction: row;
			justify-content: center; /* centrerer kortene horisontalt */
			align-items: flex-start; /* justerer toppen */
			gap: 2rem; /* afstand mellem kortene */
			flex-wrap: wrap;
			width: 100%;
		}
		footer {
			display: flex;
			flex-direction: row;
			align-items: flex-end;
			justify-content: space-between;
			padding: 2%;
		}
	}
</style>
